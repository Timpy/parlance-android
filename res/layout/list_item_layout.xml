<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09" >
        
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/space" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >
                
        	<ImageView
            	android:layout_width="3dp"
            	android:layout_height="3dp"
            	android:src="@drawable/space" />
        	
        	<RelativeLayout
            	android:layout_width="27dp"
            	android:layout_height="33dp"
            	android:background="@drawable/marker_logo" >

            	<TextView
                	android:id="@+id/rank_textview"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_centerHorizontal="true"
                	android:layout_centerVertical="true"
                	android:textColor="#FFFFFF"
                	android:textStyle="bold" 
            		android:layout_marginTop="10dp"/>
            
        	</RelativeLayout>    
        </LinearLayout>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/space" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_rname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textColor="@color/rname_color"
                android:textStyle="bold" 
                android:clickable="true"
                android:focusable="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tele: "
                    android:textColor="@color/rtele_color" />

                <TextView
                    android:id="@+id/tv_rtele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telephone Number"
                    android:textColor="@color/rtele_color" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_raddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/raddress_color" />

        </LinearLayout>
    </LinearLayout>
    
    <ImageView                      
        android:layout_width="30dp"                
        android:layout_height="20dp"                        
        android:src="@drawable/space" />

</LinearLayout>